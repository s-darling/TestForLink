package com.orchestranetworks.geomatch.match;
public class Coordinate {

	private Double lat;
	private Double lng;
	// flag used to show that a coordinate was verified.
	private boolean valid = false;
	//x is lat
	//y is lng
	//lets rename this shit

	public Coordinate(Integer lat, Integer lng, Boolean validity) {
		setValid(validity);
		this.setLatitude(0.0 + lat);
		this.setLongitude(0.0 + lng);
	}

	public Coordinate(Double lat, Double lng, Boolean validity) {
		setValid(validity);
		this.setLatitude(lat);
		this.setLongitude(lng);
	}

	public Coordinate(Integer lat, Integer lng) {
		this.setLatitude(0.0 + lat);
		this.setLongitude(0.0 + lng);
	}

	public Coordinate(Double lat, Double lng) {
		this.setLatitude(lat);
		this.setLongitude(lng);
	}

	public Double getLongitude() {
		return lng;
	}

	public void setLongitude(Double y) {
		this.lng = y;
	}

	public Double getLatitude() {
		return lat;
	}

	@Override
	public String toString() {
		return new StringBuilder("[x:").append(lat).append(", y:").append(lng)
				.append("]").toString();
	}

	public void setLatitude(Double x) {
		this.lat = x;
	}

	public boolean isValid() {
		return valid;
	}

	public void setValid(boolean valid) {
		this.valid = valid;
	}

}